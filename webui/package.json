{
    "name": "sotd-analyzer-webui",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite --port 3000 --strictPort",
        "build": "tsc && vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:unit": "jest --testPathPattern=src",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:auto": "./scripts/auto-playwright.sh",
        "test:e2e:quick": "./scripts/run-tests.sh -p chromium -g 'basic'",
        "test:e2e:all": "./scripts/run-tests.sh -p all",
        "test:e2e:monitor": "tail -f playwright-test-*.log",
        "test:e2e:background": "./scripts/auto-test.sh",
        "test:e2e:watch": "./scripts/monitor-tests.sh"
    },
    "dependencies": {
        "@tanstack/react-table": "^8.10.7",
        "@types/react-datepicker": "^4.19.4",
        "@types/react-window": "^1.8.8",
        "axios": "^1.6.0",
        "date-fns": "^2.30.0",
        "react": "^18.2.0",
        "react-datepicker": "^4.21.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.8.1",
        "react-table": "^7.7.0",
        "react-virtualized-auto-sizer": "^1.0.26",
        "react-window": "^1.8.11",
        "react-window-infinite-loader": "^1.0.10"
    },
    "devDependencies": {
        "@playwright/test": "^1.54.1",
        "@testing-library/jest-dom": "^6.1.4",
        "@testing-library/react": "^14.1.2",
        "@testing-library/user-event": "^14.5.1",
        "@types/jest": "^29.5.8",
        "@types/node": "^24.0.15",
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "@vitejs/plugin-react": "^4.1.0",
        "autoprefixer": "^10.4.21",
        "eslint": "^8.53.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.4",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.17",
        "ts-jest": "^29.4.0",
        "typescript": "^5.2.2",
        "vite": "^7.0.5"
    }
}